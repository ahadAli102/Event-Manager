<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SetInfoActivity">
    <RelativeLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/setNameProgressId"
            android:layout_centerInParent="true"
            android:layout_width="60dp"
            android:layout_height="60dp">
        </ProgressBar>
        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Set user name"
                android:id="@+id/setUserName"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:text="*User name should be unique"
                android:layout_below="@id/setUserName"
                android:textSize="15sp"
                android:textColor="#E12214"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="15dp"
            android:id="@+id/layout2"
            android:layout_below="@id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/setUserNameEditTextId"
                android:hint="Enter user name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>
            <Button
                android:layout_marginTop="10dp"
                android:text="Submit"
                android:id="@+id/submitButtonId"
                android:textAllCaps="false"
                android:layout_below="@id/setUserNameEditTextId"
                android:layout_width="match_parent"
                android:layout_height="60dp">
            </Button>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout3"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/finalNameTextId"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <Button
                android:text="Confirm"
                android:layout_marginTop="3dp"
                android:textAllCaps="false"
                android:id="@+id/confirmButtonId"
                android:layout_below="@id/finalNameTextId"
                android:layout_width="match_parent"
                android:layout_height="60dp">
            </Button>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>