<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:background="@drawable/single_item_design">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/adminAboutSingleImageId"
        android:layout_marginLeft="5dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/profile"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adminAboutSingleImageId"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/adminAboutSingleNameId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This will be a long big name"
            android:textSize="20sp"
            android:layout_marginTop="7dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/adminAboutSingleDesignationId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="General Secretary"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/adminAboutSingleEmailId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ahad15-12484@diu.edu.bd"
            android:textSize="15sp"
            android:textColor="@color/black"/>

    </LinearLayout>
</RelativeLayout>