<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.common.ShowActivitiesActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ShowActivitiesActivityTextViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="This is title"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/ShowActivitiesActivityTextViewId1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is title"
        android:textColor="@color/black"
        android:textSize="20dp" />


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ShowActivitiesActivityRecyclerViewId"
        tools:listitem="@layout/single_activities_list">
    </androidx.recyclerview.widget.RecyclerView>



</LinearLayout>